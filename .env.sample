# Database (local Mongo)
DATABASE_URL=

# JWT
JWT_SECRET="your-super-secret-jwt-key-at-least-32-chars-long-for-security"
JWT_EXPIRATION="7d"

# Redis (for caching; optional, skip if not used yet)
REDIS_HOST="localhost"
REDIS_PORT=18379
CACHE_TTL=3600

# RabbitMQ
RABBITMQ_URL="amqp://guest:guest@localhost:15672"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email (dev: skip or use Mailtrap)
EMAIL_HOST="smtp.mailtrap.io"
EMAIL_PORT=587
EMAIL_USER="your-mailtrap-user"
EMAIL_PASSWORD="your-mailtrap-pass"
EMAIL_FROM="noreply@cognistock.com"

# App
PORT=3001
NODE_ENV="development"

# Frontend API (add to frontend/.env or vite.config)
VITE_API_URL=http://localhost:3001/api
APP_URL="http://localhost:5173"

AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws -secret-access"
TEST_DB_URL="your-test-mongodb-url"
ANDROID_KEYSTORE_BASE64="base64-encoded-keystore-file"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
IOS_CERTIFICATE_BASE64="base64-encoded-ios-certificate"
GITHUB_TOKEN="auto provided"